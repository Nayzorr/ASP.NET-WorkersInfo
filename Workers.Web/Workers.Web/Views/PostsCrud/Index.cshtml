@model IEnumerable<Workers.Web.Models.PostSelectionModel>

@{
    ViewBag.Title = "Index";
}

<h2>Список посад</h2>

<p>
    @Html.ActionLink("Створити нову посаду", "Create", null, new { @class = "btn btn-warning btn-sm" })
</p>

<table class="table" style="background:none">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State_Units)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State_Units)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Детальніше", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Видалити", "Delete", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
            </td>
        </tr>
    }

</table>
@section GoToMainMenu{
    @Html.Action("GoToMainMenu", "Posts")
}