<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Styles.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color: #f2f2f2">
    <div class="navbar navbar-inverse" role="navigation">
        @*<a class="navbar-brand hidden-xs" href="#">*@
        <a class="navbar-brand hidden-xs" href="/">
            ПО "Працівники": інформація про працівників
        </a>
        <a class="navbar-brand visible-xs" href="#">ПО "Працівники"</a>
    </div>
    <div style="margin-left:2% ; margin-right:2% ; margin-bottom:2% ">
        @RenderSection("GoToMainMenu", false)
    </div>

    <div class="row panel" style="margin-left:2% ; margin-right:2% ; background:none">

        <div id="categories" class="col-sm-5 col-md-4 col-lg-3">
            @*(місце для меню)*@
            @RenderSection("NavMenu", false)
        </div>
        <div class="col-sm-7 col-md-8 col-lg-9">
            @RenderBody()
        </div>
    </div>

    <footer>@RenderSection("Footer", false)</footer>
</body>
</html>
